<% 
const allCaptions = {
  '/gallery/photos/Cuba': {
    'contrasts_of_shade.jpg': 'El Vedado, Havana, July 2023',
    'potted_cat.jpg': 'El Vedado, Havana, July 2023'
  },
  '/gallery/photos/Panama': {
    'mono.jpg': 'Soberanía National Park, Panama, July 2022',
    'gato.jpg': 'Panama City, Panama, May 2023',
    'derechos.jpg': 'Panama City, Panama, June 2023'
  }
};

function getCaption(imagePath) {
  const photoDir = imagePath.substring(0, imagePath.lastIndexOf('/'));
  const filename = imagePath.split('/').pop();
  const dirCaptions = allCaptions[photoDir];
  return dirCaptions ? dirCaptions[filename] : null;
}

const galleryId = 'travel-' + Date.now() + '-' + Math.floor(Math.random() * 1000);
%>

<style>
.photo-carousel-<%= galleryId %> {
  position: relative;
  max-width: 800px;
  margin: 2rem auto;
  background: white;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  overflow: hidden;
}

.carousel-container-<%= galleryId %> {
  position: relative;
  height: 400px;
  overflow: hidden;
}

.carousel-slides-<%= galleryId %> {
  display: flex;
  height: 100%;
  transition: transform 0.4s ease;
}

.slide-item-<%= galleryId %> {
  min-width: 100%;
  height: 100%;
  position: relative;
  cursor: pointer;
  background-size: cover;
  background-position: center;
}

.slide-item-<%= galleryId %>::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: inherit;
  filter: blur(15px);
  transform: scale(1.05);
  z-index: 1;
}

.slide-main-image-<%= galleryId %> {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  z-index: 2;
}

.hover-caption-<%= galleryId %> {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.8));
  color: white;
  padding: 2rem 1rem 1rem;
  opacity: 0;
  transition: opacity 0.3s ease;
  font-size: 1rem;
  z-index: 3;
}

.slide-item-<%= galleryId %>:hover .hover-caption-<%= galleryId %> {
  opacity: 1;
}

.nav-button-<%= galleryId %> {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255,255,255,0.2);
  border: none;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  z-index: 10;
  transition: all 0.3s ease;
  color: rgba(0,0,0,0.5);
}

.nav-button-<%= galleryId %>:hover {
  background: rgba(255,255,255,0.5);
  color: rgba(0,0,0,0.8);
}

.nav-prev-<%= galleryId %> {
  left: 15px;
}

.nav-next-<%= galleryId %> {
  right: 15px;
}

.indicator-dots-<%= galleryId %> {
  position: absolute;
  bottom: 15px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 8px;
  z-index: 10;
}

.dot-<%= galleryId %> {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  cursor: pointer;
  transition: all 0.3s ease;
}

.dot-<%= galleryId %>.active {
  background: rgba(255,255,255,0.6);
  transform: scale(1.2);
}

.dot-<%= galleryId %>:hover {
  background: rgba(255,255,255,0.4);
}

/* Full size modal */
.fullsize-modal-<%= galleryId %> {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.9);
  padding: 80px 60px 40px;
  box-sizing: border-box;
}

.fullsize-modal-<%= galleryId %>.show {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.modal-image-<%= galleryId %> {
  max-width: calc(100% - 140px);
  max-height: calc(100% - 120px);
  object-fit: contain;
  border-radius: 5px;
}

.modal-text-<%= galleryId %> {
  color: white;
  text-align: center;
  margin-top: 20px;
  font-size: 1.2rem;
  font-weight: 500;
  padding: 0;
  max-width: 80%;
}

.close-modal-<%= galleryId %> {
  position: absolute;
  top: 30px;
  right: 40px;
  color: rgba(255,255,255,0.4);
  font-size: 40px;
  font-weight: bold;
  cursor: pointer;
  z-index: 1001;
  transition: color 0.3s ease;
}

.close-modal-<%= galleryId %>:hover {
  color: rgba(255,255,255,0.8);
}

.modal-nav-<%= galleryId %> {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  color: rgba(255,255,255,0.2);
  font-size: 60px;
  cursor: pointer;
  user-select: none;
  transition: color 0.3s ease;
  z-index: 1001;
  padding: 20px;
}

.modal-nav-<%= galleryId %>:hover {
  color: rgba(255,255,255,0.6);
}

.modal-prev-<%= galleryId %> {
  left: 20px;
}

.modal-next-<%= galleryId %> {
  right: 20px;
}

@media (max-width: 768px) {
  .fullsize-modal-<%= galleryId %> {
    padding: 60px 20px 20px;
  }
  
  .modal-image-<%= galleryId %> {
    max-width: calc(100% - 80px);
  }
  
  .modal-nav-<%= galleryId %> {
    font-size: 40px;
    padding: 10px;
  }
  
  .close-modal-<%= galleryId %> {
    top: 20px;
    right: 20px;
    font-size: 30px;
  }
}
</style>

<div class="photo-carousel-<%= galleryId %>">
  <div class="carousel-container-<%= galleryId %>">
    <div class="carousel-slides-<%= galleryId %>" id="slides-<%= galleryId %>">
      <% for (let i = 0; i < items.length; i++) { %>
        <div class="slide-item-<%= galleryId %>" 
             style="background-image: url('<%= items[i].path %>')"
             onclick="openFullsize('<%= galleryId %>', <%= i %>)">
          <img src="<%= items[i].path %>" alt="Travel photo" class="slide-main-image-<%= galleryId %>">
          <% const caption = getCaption(items[i].path); %>
          <% if (caption) { %>
            <div class="hover-caption-<%= galleryId %>"><%= caption %></div>
          <% } %>
        </div>
      <% } %>
    </div>
    
    <% if (items.length > 1) { %>
      <button class="nav-button-<%= galleryId %> nav-prev-<%= galleryId %>" onclick="slideCarousel('<%= galleryId %>', -1)">‹</button>
      <button class="nav-button-<%= galleryId %> nav-next-<%= galleryId %>" onclick="slideCarousel('<%= galleryId %>', 1)">›</button>
      
      <div class="indicator-dots-<%= galleryId %>" id="indicators-<%= galleryId %>">
        <% for (let i = 0; i < items.length; i++) { %>
          <span class="dot-<%= galleryId %> <%= i === 0 ? 'active' : '' %>" onclick="jumpToSlide('<%= galleryId %>', <%= i %>)"></span>
        <% } %>
      </div>
    <% } %>
  </div>
</div>

<!-- Full size modal -->
<div id="fullModal-<%= galleryId %>" class="fullsize-modal-<%= galleryId %>">
  <span class="close-modal-<%= galleryId %>" onclick="closeFullsize('<%= galleryId %>')">&times;</span>
  <% if (items.length > 1) { %>
    <div class="modal-nav-<%= galleryId %> modal-prev-<%= galleryId %>" onclick="navigateModal('<%= galleryId %>', -1)">‹</div>
    <div class="modal-nav-<%= galleryId %> modal-next-<%= galleryId %>" onclick="navigateModal('<%= galleryId %>', 1)">›</div>
  <% } %>
  <img id="fullImage-<%= galleryId %>" class="modal-image-<%= galleryId %>">
  <div id="fullCaption-<%= galleryId %>" class="modal-text-<%= galleryId %>"></div>
</div>

<script>
if (!window.photoGalleries) window.photoGalleries = {};

window.photoGalleries['<%= galleryId %>'] = {
  current: 0,
  modalCurrent: 0,
  total: <%= items.length %>,
  photos: [
    <% for (let i = 0; i < items.length; i++) { %>
      {
        src: '<%= items[i].path %>',
        caption: '<%= getCaption(items[i].path) || "" %>'
      }<%= i < items.length - 1 ? ',' : '' %>
    <% } %>
  ]
};

function slideCarousel(id, direction) {
  const gallery = window.photoGalleries[id];
  const slides = document.getElementById('slides-' + id);
  const dots = document.querySelectorAll('#indicators-' + id + ' .dot-' + id);
  
  gallery.current += direction;
  
  if (gallery.current >= gallery.total) gallery.current = 0;
  if (gallery.current < 0) gallery.current = gallery.total - 1;
  
  slides.style.transform = 'translateX(-' + (gallery.current * 100) + '%)';
  
  dots.forEach((dot, index) => {
    dot.classList.toggle('active', index === gallery.current);
  });
}

function jumpToSlide(id, index) {
  const gallery = window.photoGalleries[id];
  const slides = document.getElementById('slides-' + id);
  const dots = document.querySelectorAll('#indicators-' + id + ' .dot-' + id);
  
  gallery.current = index;
  slides.style.transform = 'translateX(-' + (index * 100) + '%)';
  
  dots.forEach((dot, i) => {
    dot.classList.toggle('active', i === index);
  });
}

function openFullsize(id, index) {
  const gallery = window.photoGalleries[id];
  const modal = document.getElementById('fullModal-' + id);
  const image = document.getElementById('fullImage-' + id);
  const caption = document.getElementById('fullCaption-' + id);
  
  gallery.modalCurrent = index;
  modal.classList.add('show');
  image.src = gallery.photos[index].src;
  caption.textContent = gallery.photos[index].caption || '';
  
  if (!gallery.photos[index].caption) {
    caption.style.display = 'none';
  } else {
    caption.style.display = 'block';
  }
  
  document.body.style.overflow = 'hidden';
}

function navigateModal(id, direction) {
  const gallery = window.photoGalleries[id];
  const image = document.getElementById('fullImage-' + id);
  const caption = document.getElementById('fullCaption-' + id);
  
  gallery.modalCurrent += direction;
  
  if (gallery.modalCurrent >= gallery.total) gallery.modalCurrent = 0;
  if (gallery.modalCurrent < 0) gallery.modalCurrent = gallery.total - 1;
  
  image.src = gallery.photos[gallery.modalCurrent].src;
  caption.textContent = gallery.photos[gallery.modalCurrent].caption || '';
  
  if (!gallery.photos[gallery.modalCurrent].caption) {
    caption.style.display = 'none';
  } else {
    caption.style.display = 'block';
  }
}

function closeFullsize(id) {
  const modal = document.getElementById('fullModal-' + id);
  modal.classList.remove('show');
  document.body.style.overflow = 'auto';
}

// Close on click outside
window.addEventListener('click', function(event) {
  Object.keys(window.photoGalleries).forEach(id => {
    const modal = document.getElementById('fullModal-' + id);
    if (event.target === modal) {
      closeFullsize(id);
    }
  });
});

// Keyboard navigation
document.addEventListener('keydown', function(e) {
  const activeModal = Object.keys(window.photoGalleries).find(id => 
    document.getElementById('fullModal-' + id).classList.contains('show')
  );
  
  if (activeModal) {
    if (e.key === 'ArrowLeft') navigateModal(activeModal, -1);
    if (e.key === 'ArrowRight') navigateModal(activeModal, 1);
    if (e.key === 'Escape') closeFullsize(activeModal);
  }
});
</script>
